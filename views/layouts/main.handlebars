<html lang='en-US'>
 <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <meta http-equiv='X-UA-Compatible' content='ie=edge' />
    <title>
      Materials Trader
    </title>
    <link rel='icon' href='/images/logo.png' type='image/png' />
    <link rel='stylesheet' href='/css/style.css' />
    <!-- Amatic font -->
    <link rel='preconnect' href='https://fonts.googleapis.com' />
    <link rel='preconnect' href='https://fonts.gstatic.com' crossorigin />
    <link
      href='https://fonts.googleapis.com/css2?family=Amatic+SC&family=Six+Caps&family=Teko:wght@300&display=swap'
      rel='stylesheet'
    />
    <!-- Sue Ellen Francisco font -->
    <link rel='preconnect' href='https://fonts.googleapis.com' />
    <link rel='preconnect' href='https://fonts.gstatic.com' crossorigin />
    <link
      href='https://fonts.googleapis.com/css2?family=Amatic+SC&family=Six+Caps&family=Sue+Ellen+Francisco&family=Teko:wght@300&display=swap'
      rel='stylesheet'
    />
  </head>

  <body>
    <nav>
      <img id='logo' src='/images/logo.png' />
      <h1>MATERIALS TRADER</h1>
      <h2>peer-to-peer recycling</h2>
      <div class='buttons'>

        {{!-- ABOUT BUTTON --}}
        <button id="aboutBtn">
          <a href="/about">
            <img id='about-icon' src='/images/about.png' />
            <h3 id='about-text'>ABOUT</h3>
          </a>
        </button>

        {{!-- HOME BUTTON --}}
        <button id="homeBtn">
          <a href="/">
            <img id='home-icon' src='/images/home.png' />
            <h3 id='home-text'>HOME</h3>
          </a>
        </button>
      
      {{!-- LOGIN OR PROFILE BUTTON --}}
        <button id="loginOrProfileBtn">
          <img id='profile-icon' src='/images/profile.png' />
          {{#if loggedIn}}
            <a href='/profile'>
              <h3 id='profile-text'>PROFILE</h3>
            </a>
          {{else}}
            <a href='/login'>
              <h3 id='profile-text'>LOGIN</h3>
            </a>
          {{/if}}
        </button>

        {{!-- SEARCH BUTTON --}}
        <button id="searchBtn">
          <a href="/search">
            <img id='search-icon' src='/images/search.png' />
            <h3 id='search-text'>SEARCH</h3>
          </a>
        </button>

      </div>
    </nav>

{{!-- BODY TO DISPLAY ALL VIEWS --}}
    <main>
      {{{body}}}
    </main>

    {{#if loggedIn}}
      <script src='/js/logout.js'></script>
    {{/if}}
  </body>
</html>