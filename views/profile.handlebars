<div class="dash">
  <div class="title_header">
    <a id="logout" href="/home">
      <h3>LOGOUT</h3>
    </a>
  </div>
  <div class="dash_body">
    <div id="your_posts">
    <h4>Your posts:</h4>
    </div>
    {{#if listings.length}}
    {{#each listings as |listing|}}
    <div class="user_posts">    
      <h3 class="post_title">{{listing.material.type}}</h3>
      <h5 id="post_date">{{format_date listing.createdAt}}</h5>

      <form class="delete" action="/api/users/deletelisting/{{listing.id}}" method="post" id="createform">
        <button type="submit" value="submit" id="deleteBtn">
          <img id="trash-icon" src="../public/images/trashcan.png"/>
        </button>
      </form>
    </div>
    {{/each}}
    {{/if}}
        
    <form class="create" action="/newlisting" method="get" id="createform">
      <button type="submit" id="postBtn" value="submit" id="createBtn">
        <h3>LIST RECYCLABLES</h3>
        </button>
    </form>
  </div> 
  </div>
<script src='js/create.js'></script>

